<%= form_for @article, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.cktext_area :body, rows: '10' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  articles_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
