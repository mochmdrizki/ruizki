<% @articles.each do |article| %>
  <h2><%= link_to article.title, article %></h2>
  <h5><%=l article.created_at, format: :long %> by Admin</h5>
  <%= image_tag(article.image.url, class: 'img img-thumbnail') %>
  <br><br>
  <p>in <%= raw(article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></p>
  <hr>
<% end %>
